#!/bin/bash

TOKEN=`cat token`
URL='https://api.telegram.org/bot'$TOKEN
nlDir="notifyLevels"
cutomCmdDir="cmds"

#Check for new messages in active mode
cycleSleep=0
#Check for new messages in stand by mode
cycleSleepStandBy=10
#Go to stand by mode after
standByAfter=120

function send_message {
  result=100
  while [ $result -ne 0 ]; do
    {
      res=$(curl -f "$URL/sendMessage" -F "chat_id=$1" -F "text=$2")
      result=$?
    } &>/dev/null
    if [ $result -ne 0 ]; then
      echo "curl errcode: $result"
      sleep 15
    fi
  done
}
function send_markdown_message {
  result=100
  while [ $result -ne 0 ]; do
    {
      res=$(curl -f "$URL/sendMessage" -F "chat_id=$1" -F "text=$2" -F "parse_mode=markdown")
      result=$?
    } &>/dev/null
    if [ $result -ne 0 ]; then
      echo "curl errcode: $result"
      sleep 15
    fi
  done
}
function send_doc {
  result=100
  while [ $result -ne 0 ]; do
    {
      res=$(curl -f "$URL/sendDocument" -F "chat_id=$1" -F "document=@$2")
      result=$?
    } &>/dev/null
    if [ $result -ne 0 ]; then
      echo "curl errcode: $result"
      sleep 15
    fi
  done
}
function getFile {
  result=100
  while [ $result -ne 0 ]; do
    {
      res=$(curl -f "$URL/getFile" -F "file_id=$1")
      result=$?
    } &>/dev/null
    if [ $result -ne 0 ]; then
      echo "curl errcode: $result"
      sleep 15
    fi
  done
}
function send_photo() {
  result=100
  while [ $result -ne 0 ]; do
    {
      res=$(curl -f "$URL/sendPhoto" -F "chat_id=$1" -F "photo=@$2")
      result=$?
    } &>/dev/null
    if [ $result -ne 0 ]; then
      echo "curl errcode: $result"
      sleep 15
    fi
  done
}
